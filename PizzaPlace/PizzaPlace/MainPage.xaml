<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
             x:Class="PizzaPlace.MainPage">  

    <ScrollView>  
        <VerticalStackLayout  
            Padding="30,0"  
            Spacing="25">
            <Button  
                HorizontalOptions="Center"  
                Margin="0,0,0,0"  
                Style="{StaticResource BottomButton}" 
                Text="Menu"/>
                <!--Clicked="MenuView"-->
            <HorizontalStackLayout
                Padding="0"
                HorizontalOptions="Center">
                <Button
                    HorizontalOptions="Center"
                    Margin="0"
                    Style="{StaticResource AddRemovePictureButton}"
                    Text="Add">
                </Button>
                <Button
                    HorizontalOptions="Center"
                    Margin="0"
                    Style="{StaticResource AddRemovePictureButton}"
                    Text="Del"></Button>
            </HorizontalStackLayout>

            <Button  
                HorizontalOptions="Center"  
                Margin="0,0,0,0"  
                Style="{StaticResource EditDeleteButton}" 
                Text="Menu"/>
            <Button  
                HorizontalOptions="Center"  
                Margin="0,0,0,0"  
                Style="{StaticResource EditDeleteButton}" 
                Text="Menu"/>
        </VerticalStackLayout>  
    </ScrollView>  

</ContentPage>
